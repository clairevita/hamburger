<h1>Burger Establishment</h1>

<h2>Fresh off the grill!</h2>

<div class="mx-auto row">
    <div class="col-4">
      <h3 class="text-white text-center bg-success p-3 mb-2 mt-2">On the Table</h3>
      <ul>
          {{#each burgers}}
            {{#unless devoured}}
              <li>
                {{burger_name}}
                  <button class="devour btn btn-sm btn-success mb-1" data-id="{{id}}">EAT!</button>
              </li>
            {{/unless}}
          {{/each}}
      </ul>
    </div>


    <div class="col-4">
      <h3 class="text-white text-center bg-info p-3 mb-2 mt-2">Eaten</h3>
      <ul>
          {{#each burgers}}
            {{#if devoured}}
              <li>
                {{burger_name}}
                <button class="delete btn btn-sm btn-v mb-1" data-id="{{id}}">x</button>
              </li>
            {{/if}}
          {{/each}}
      </ul>
    </div>
  </div>

  <hr>


<h2>Prep a New Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name your creation!</label>
    <input type="text" id="ca" class="burger" name="name">
  </div>
  <button id="plate"type="submit">Plate your dish!</button>
</form>
