<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Burger Establishment</h1>
    <p class="lead">Fresh off the grill!</p>
  </div>
</div>
<div class="row">
<div class="col-1"></div>
    <div class="mx-1 col-3">
      <h3 class="m-4 text-white text-center bg-warning p-6">Kitchen</h3>
      <ul>
  <div class="px-3 form-group">
      <label for="burgerName" class="label">Name your creation!</label>
      <textarea class="form-control" id="burgerName" rows="2"></textarea>
    </div>
      <button id="plate" class="devour btn btn-md btn-warning mb-1" type="submit">Plate your dish!</button>
      </ul>
    </div>


    <div class="col-4">
      <h3 class="m-4 text-white text-center bg-success p-6">Counter</h3>
      <ul>
          {{#each burgers}}
            {{#unless devoured}}
              <li>
                {{burger_name}}
                  <button class="devour btn btn-md btn-success mb-1" data-id="{{id}}">Serve!</button>
              </li>
            {{/unless}}
          {{/each}}
      </ul>
    </div>

    <div class="mx-1 col-3">
      <h3 class="m-4 text-white text-center bg-info p-6">Table</h3>
      <ul>
          {{#each burgers}}
            {{#if devoured}}
              <li>
                {{burger_name}}
                <button class="delete btn btn-sm btn-info mb-1" data-id="{{id}}">x</button>
              </li>
            {{/if}}
          {{/each}}
      </ul>
    </div>
    <div class="col-1"></div>
  </div>

  <hr>
